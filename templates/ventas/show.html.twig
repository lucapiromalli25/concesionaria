{% extends 'base.html.twig' %}

{% block title %}Detalle de Venta #{{ venta.id }}{% endblock %}

{% block body %}
<div class="page-header">
    <h3 class="fw-bold mb-3">Detalle de Venta</h3>
    <ul class="breadcrumbs">
        <li class="nav-home"><a href="{{ path('app_home') }}"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="{{ path('app_ventas_index') }}">Ventas</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Venta #{{ venta.id }}</a></li>
    </ul>
</div>

<div class="row">
    {# --- DATOS PRINCIPALES DE LA VENTA --- #}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                     <h4 class="card-title mb-0">Información General</h4>
                     {% if venta.receiptNumber %}
                        <a href="{{ path('app_ventas_receipt', {'id': venta.id}) }}" target="_blank" class="btn btn-primary btn-sm">
                            <i class="fas fa-print"></i> Imprimir Recibo General
                        </a>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Vehículo:</strong> <a href="{{ path('app_vehiculos_show', {'id': venta.vehiculo.id}) }}">{{ venta.vehiculo.version.modelo.marca.name }} {{ venta.vehiculo.version.modelo.name }}</a><br>
                        <strong>Cliente:</strong> {{ venta.cliente.firstName }} {{ venta.cliente.lastName }} (DNI: {{ venta.cliente.documentNumber }})
                    </div>
                    <div class="col-md-6">
                        <strong>Fecha de Venta:</strong> {{ venta.saleDate|date('d/m/Y') }}<br>
                        <strong>Vendedor:</strong> {{ venta.vendedor.completeName }}<br>
                        {% if venta.saleDocumentName %}
                            <strong>Boleto de Venta:</strong> 
                            <a href="{{ vich_uploader_asset(venta, 'saleDocumentFile') }}" target="_blank" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Ver Documento
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# --- TABLA DE CUOTAS --- #}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                 <div class="d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Plan de Pagos</h4>
                    {% if not venta.hasPayments() and is_granted('ROLE_PRICE') %}
                        <button class="btn btn-warning btn-sm" id="btn-modificar-plan">
                            <i class="fas fa-edit"></i> Modificar Plan
                        </button>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th># Cuota</th>
                            <th>Fecha Vencimiento</th>
                            <th>Monto Original</th>
                            <th>Monto Pagado</th>
                            <th>Moneda</th>
                            <th>Estado</th>
                            <th>Fecha de Pago</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for cuota in venta.cuotas|sort((a, b) => a.installmentNumber <=> b.installmentNumber) %}
                        <tr>
                            <td><strong>{{ cuota.installmentNumber }}</strong></td>
                            <td>{{ cuota.dueDate|date('d/m/Y') }}</td>
                            <td>${{ cuota.amount|number_format(2, ',', '.') }}</td>
                            <td>$ {{cuota.paidAmount ? cuota.paidAmount|number_format(2, ',', '.') : '0,00' }}</td>
                            <td>{{ cuota.paidCurrency ? cuota.paidCurrency : '-'}}</td>
                            <td>
                                {% if cuota.status == 'Pagada' %}
                                    <span class="badge bg-success">Pagada</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                {% endif %}
                            </td>
                            <td>{{ cuota.paymentDate ? cuota.paymentDate|date('d/m/Y H:i') : 'N/A' }}</td>
                            <td class="text-end">
                                {% if cuota.status == 'Pendiente' %}
                                    <button class="btn btn-success btn-sm btn-register-payment" data-cuota-id="{{ cuota.id }}">
                                        Registrar Pago
                                    </button>
                                {% else %}
                                    <button class="btn btn-danger btn-sm btn-cancel-payment" data-cuota-id="{{ cuota.id }}" data-token="{{ csrf_token('cancel-payment' ~ cuota.id) }}">
                                        Cancelar Pago
                                    </button>
                                {% endif %}
                                {% if cuota.receiptName %}
                                    <a href="{{ vich_uploader_asset(cuota, 'receiptFile') }}" target="_blank" class="btn btn-secondary btn-sm" title="Ver Comprobante Subido">
                                        <i class="fas fa-paperclip"></i> Comprobante
                                    </a>
                                {% endif %}
                                {% if cuota.receiptNumber %}
                                    <a href="{{ path('app_cuotas_receipt', {'id': cuota.id}) }}" target="_blank" class="btn btn-info btn-sm" title="Ver Recibo PDF">
                                        <i class="fas fa-receipt"></i> Recibo
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Esta venta no tiene un plan de cuotas asociado.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="paymentModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="paymentModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="payment-modal-body-content"></div>
    </div>
  </div>
</div>

<div class="modal fade" id="modifyPlanModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modifyPlanModalLabel">Modificar Plan de Pagos</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="modify-plan-modal-body"></div>
    </div>
  </div>
</div>


<div class="modal fade" id="confirmationModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmationModalLabel">Confirmar Acción</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="confirmationModalBody">
        ¿Estás seguro de que deseas realizar esta acción?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-danger" id="confirmActionBtn">Confirmar</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- INICIALIZACIÓN DE MODALES ---
        const paymentModalEl = document.getElementById('paymentModal');
        const paymentModal = paymentModalEl ? new bootstrap.Modal(paymentModalEl) : null;
        const paymentModalBody = document.getElementById('payment-modal-body-content');
        const paymentModalTitle = document.getElementById('paymentModalLabel');
        
        const modifyPlanModalEl = document.getElementById('modifyPlanModal');
        const modifyPlanModal = modifyPlanModalEl ? new bootstrap.Modal(modifyPlanModalEl) : null;
        const modifyPlanModalBody = document.getElementById('modify-plan-modal-body');

        const confirmationModalEl = document.getElementById('confirmationModal');
        const confirmationModal = confirmationModalEl ? new bootstrap.Modal(confirmationModalEl) : null;
        const confirmActionBtn = document.getElementById('confirmActionBtn');
        const confirmationModalBody = document.getElementById('confirmationModalBody');
        
        const tablaBody = document.querySelector('tbody');

        // --- MANEJO DE CLICS EN LA TABLA ---
        if (tablaBody) {
            tablaBody.addEventListener('click', function(e) {
                const registerButton = e.target.closest('.btn-register-payment');
                const cancelButton = e.target.closest('.btn-cancel-payment');

                // --- LÓGICA PARA REGISTRAR PAGO ---
                if (registerButton) {
                    const cuotaId = registerButton.dataset.cuotaId;
                    paymentModalTitle.textContent = `Registrar Pago de Cuota #${cuotaId}`;
                    const url = `{{ path('app_cuotas_register_payment', {'id': 'ID_PLACEHOLDER'}) }}`.replace('ID_PLACEHOLDER', cuotaId);
                    
                    fetch(url).then(r => r.text()).then(html => {
                        paymentModalBody.innerHTML = html;
                        paymentModal.show();
                        attachPaymentFormSubmitListener();
                    });
                }

                // --- LÓGICA PARA CANCELAR PAGO (CON MODAL BOOTSTRAP) ---
                if (cancelButton) {
                    e.preventDefault();
                    const cuotaId = cancelButton.dataset.cuotaId;
                    const token = cancelButton.dataset.token;
                    const url = `{{ path('app_cuotas_cancel_payment', {'id': 'ID_PLACEHOLDER'}) }}`.replace('ID_PLACEHOLDER', cuotaId);

                    confirmationModalBody.textContent = "Esta acción anulará el pago. La cuota volverá a estar pendiente y el comprobante se eliminará. ¡No podrás revertir esto!";
                    confirmActionBtn.dataset.url = url;
                    confirmActionBtn.dataset.token = token;
                    
                    confirmationModal.show();
                }
            });
        }

        // --- EVENTO PARA EL BOTÓN DE CONFIRMACIÓN DEL MODAL ---
        if (confirmActionBtn) {
            confirmActionBtn.addEventListener('click', function() {
                const url = this.dataset.url;
                const token = this.dataset.token;

                this.disabled = true;
                this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Eliminando...';

                fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'X-Requested-With': 'XMLHttpRequest' },
                    body: new URLSearchParams({ 'token': token })
                })
                .then(response => response.json())
                .then(data => {
                    confirmationModal.hide();
                    if (data.status === 'success') {
                        $.notify({icon: 'fas fa-check-circle', title: '¡Éxito!', message: data.message},{type: 'success'});
                        setTimeout(() => { window.location.reload(); }, 1000);
                    } else {
                        $.notify({icon: 'fas fa-exclamation-triangle', title: 'Error', message: data.message},{type: 'danger'});
                    }
                })
                .finally(() => {
                    this.disabled = false;
                    this.innerHTML = 'Confirmar';
                });
            });
        }

        // --- SUBMIT DEL FORMULARIO DE PAGO ---
        function attachPaymentFormSubmitListener() {
            const form = document.getElementById('formPayment');
            if (!form) return;
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const btn = form.querySelector('button[type="submit"]');
                const spinner = btn.querySelector('.spinner-border');
                spinner.classList.remove('d-none');
                btn.disabled = true;

                fetch(form.action, { method: 'POST', body: new FormData(form), headers: {'X-Requested-with': 'XMLHttpRequest'} })
                .then(r => r.json()).then(data => {
                    if (data.status === 'success') {
                        paymentModal.hide();
                        $.notify({icon: 'fas fa-check-circle', title: '¡Éxito!', message: data.message},{type: 'success'});
                        window.open(data.cuota.reciboUrl, '_blank');
                        setTimeout(() => { window.location.reload(); }, 500);
                    } else {
                        $.notify({icon: 'fas fa-exclamation-triangle', title: 'Error', message: data.message || 'Ocurrió un error.'},{type: 'danger'});
                    }
                })
                .finally(() => {
                    spinner.classList.add('d-none');
                    btn.disabled = false;
                });
            });
        }
        
        // --- LÓGICA PARA MODIFICAR PLAN DE PAGOS ---
        const btnModificarPlan = document.getElementById('btn-modificar-plan');
        if (btnModificarPlan) {
            btnModificarPlan.addEventListener('click', function() {
                const url = '{{ path('app_plan_de_pagos_modificar', {'id': venta.id}) }}';
                fetch(url)
                    .then(r => r.text()).then(html => {
                        if (modifyPlanModalBody) {
                            modifyPlanModalBody.innerHTML = html;
                        }
                        if (modifyPlanModal) {
                            modifyPlanModal.show();
                        }
                    });
            });
        }
    });
    </script>
{% endblock %}