{% extends 'base.html.twig' %}

{% block title %}Dashboard - Concesionaria{% endblock %}

{% block body %}
<div class="page-header">
    <h3 class="fw-bold mb-3">Dashboard Principal</h3>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('app_home') }}">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Inicio</a>
        </li>
    </ul>
</div>

<div class="d-flex justify-content-end mb-3">

    <a href="{{ path('app_vehiculos_index') }}" class="btn btn-success btn-round">
        <i class="fas fa-dollar-sign"></i>
        Registrar Venta
    </a>
</div>

<div class="row">
    <div class="col-sm-6 col-md-4">
        <a href="{{ path('app_vehiculos_index') }}" class="text-decoration-none">
            <div class="card card-stats card-round">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-primary bubble-shadow-small">
                                <i class="fas fa-car"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">Vehículos en Stock</p>
                                <h4 class="card-title">{{ totalVehiculos }}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-md-4">
        <a href="#" class="text-decoration-none"> {# Reemplazar con la ruta del listado de ventas #}
            <div class="card card-stats card-round">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-success bubble-shadow-small">
                                <i class="fas fa-hand-holding-usd"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">Ventas del Mes</p>
                                <h4 class="card-title">{{ ventasMesActual }}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-md-4">
         <a href="{{ path('app_vehiculos_index') }}" class="text-decoration-none">
            <div class="card card-stats card-round">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-icon">
                            <div class="icon-big text-center icon-info bubble-shadow-small">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                        </div>
                        <div class="col col-stats ms-3 ms-sm-0">
                            <div class="numbers">
                                <p class="card-category">Valor del Inventario</p>
                                <h4 class="card-title">${{ valorTotalInventario|number_format(0, ',', '.') }}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Ventas en los últimos 15 días</div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="salesTrendChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Últimos Ingresos</div>
            </div>
            <div class="card-body">
                <div class="list-group">
                    {% for vehiculo in ultimosIngresos %}
                        <a href="{{ path('app_vehiculos_index') }}" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1 fw-bold">
                                    {{ vehiculo.version.modelo.marca.name }} {{ vehiculo.version.modelo.name }}
                                </h5>
                                <small>{{ vehiculo.anio }}</small>
                            </div>
                            <p class="mb-1">Versión: {{ vehiculo.version.name }}</p>
                        </a>
                    {% else %}
                        <p class="text-center">No hay ingresos recientes.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        <div class="card">
             <div class="card-header">
                <div class="card-title">Stock por Marca</div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="brandDonutChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            // --- GRÁFICO 1: TENDENCIA DE VENTAS (LÍNEAS) ---
            const salesCtx = document.getElementById('salesTrendChart').getContext('2d');
            const salesTrendData = {{ salesTrendChart|json_encode|raw }};
            const salesChart = new Chart(salesCtx, {
                type: 'line',
                data: {
                    labels: salesTrendData.labels,
                    datasets: [{
                        label: "Ventas por día",
                        borderColor: "#1d7af3",
                        pointBorderColor: "#FFF",
                        pointBackgroundColor: "#1d7af3",
                        pointBorderWidth: 2,
                        pointHoverRadius: 4,
                        pointHoverBorderWidth: 1,
                        pointRadius: 4,
                        backgroundColor: "transparent",
                        fill: true,
                        borderWidth: 2,
                        data: salesTrendData.data,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } },
                }
            });

            // --- GRÁFICO 2: STOCK POR MARCA (DONA) ---
            const brandCtx = document.getElementById('brandDonutChart').getContext('2d');
            const brandData = {{ vehiculosPorMarcaChart|json_encode|raw }};
            const brandChart = new Chart(brandCtx, {
                type: 'doughnut',
                data: {
                    labels: brandData.labels,
                    datasets: [{
                        data: brandData.data,
                        backgroundColor: ["#1d7af3", "#f3545d", "#fdaf4b", "#58D68D", "#AF7AC5", "#5DADE2", "#F4D03F"]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        });
    </script>
{% endblock %}