{% extends 'base.html.twig' %}
{% block title %}Gestión de Vehículos{% endblock %}

{% block body %}
<div class="page-header"><h3 class="fw-bold mb-3">Inventario de Vehículos</h3></div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Listado de Vehículos</h4>
                    <a href="{{ asset('documents/BOLETTO.docx') }}" target="_blank" class="btn btn-info btn-round ms-auto me-2">
                        <i class="fas fa-file-word"></i>
                        Imprimir Boleto en Blanco
                    </a>
                    {# --- BOTÓN AÑADIDO --- #}
                    <a href="{{ path('app_report_export_vehicles') }}" class="btn btn-secondary btn-round ms-auto me-2">
                        <i class="fas fa-file-excel"></i>
                        Exportar a Excel
                    </a>

                    {% if is_granted('ROLE_MANAGER') %}
                        <button id="btn-nuevo-vehiculo" class="btn btn-primary btn-round">
                            <i class="fa fa-plus"></i> Agregar Vehículo
                        </button>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tabla-vehiculos" class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Vehículo</th>
                                <th>Patente</th>
                                <th>Año</th>
                                <th>Color</th>
                                {% if is_granted("ROLE_PRICE") %}
                                    <th>Precio Venta</th>
                                {% endif %}
                                <th>Observaciones</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Vehículo</th>
                                <th>Patente</th>
                                <th>Año</th>
                                <th>Color</th>
                                {% if is_granted("ROLE_PRICE") %}
                                    <th>Precio Venta</th>
                                {% endif %}
                                <th>Observaciones</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </tfoot>
                        <tbody>
                        {% for vehiculo in vehiculos %}
                            <tr data-id="{{ vehiculo.id }}">
                                <td>{{ vehiculo.id }}</td>
                                <td class="vehiculo-desc">
                                    <span class="fw-bold">{{ vehiculo.version.modelo.marca.name }} {{ vehiculo.version.modelo.name }}</span><br>
                                    <small>{{ vehiculo.version.name }}</small>
                                </td>
                                <td class="vehiculo-plate">{{ vehiculo.plateNumber }}</td>
                                <td class="vehiculo-ano">{{ vehiculo.anio }}</td>
                                <td class="vehiculo-color">{{ vehiculo.color }}</td>
                                {% if is_granted("ROLE_PRICE") %}
                                    <td class="vehiculo-precio">${{ vehiculo.suggestedRetailPrice|number_format(2, ',', '.') }}</td>
                                {% endif %}
                                <td class="vehiculo-observations">{{ vehiculo.internalObservations }}</td>
                                <td>
                                    {% if vehiculo.state == 'Vendido' %}<span class="badge bg-success">Vendido</span>
                                    {% elseif vehiculo.state == 'Reservado' %}<span class="badge bg-warning text-dark">Reservado</span>
                                    {% else %}<span class="badge bg-info">En Stock</span>{% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Acciones</button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="{{ path('app_vehiculos_show', {'id': vehiculo.id}) }}">Ver Detalles</a></li>
                                            <li><button class="dropdown-item btn-editar">Editar</button></li>
                                            {% if vehiculo.state in ['En Stock', 'Reservado'] %}<hr class="dropdown-divider">{% endif %}
                                            {% if vehiculo.state == 'En Stock' %}<li><a class="dropdown-item" href="{{ path('app_reservas_new', {'id': vehiculo.id}) }}">Reservar</a></li>{% endif %}
                                            {% if vehiculo.state in ['En Stock', 'Reservado'] %}<li><a class="dropdown-item" href="{{ path('app_ventas_new', {'id': vehiculo.id}) }}">Vender</a></li>{% endif %}
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            {# DataTables manejará la fila vacía, pero la dejamos por si acaso #}
                            <tr id="fila-sin-vehiculos"><td colspan="8" class="text-center">No se encontraron vehículos</td></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="formModal" tabindex="-1" aria-hidden="true"><div class="modal-dialog modal-lg"><div class="modal-content"><div class="modal-header"><h5 class="modal-title" id="formModalLabel"></h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body" id="modal-body-content"></div></div></div></div>

<div class="modal fade" id="nestedFormModal" tabindex="-1" aria-hidden="true"><div class="modal-dialog"><div class="modal-content"><div class="modal-header"><h5 class="modal-title" id="nestedFormModalLabel"></h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body" id="nested-modal-body-content"></div></div></div></div>

<div class="modal fade" id="superNestedFormModal" tabindex="-1" aria-hidden="true"><div class="modal-dialog"><div class="modal-content"><div class="modal-header"><h5 class="modal-title" id="superNestedFormModalLabel"></h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body" id="super-nested-modal-body-content"></div></div></div></div>

<div class="modal fade" id="ultraNestedFormModal" tabindex="-1" aria-hidden="true"><div class="modal-dialog"><div class="modal-content"><div class="modal-header"><h5 class="modal-title" id="ultraNestedFormModalLabel"></h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body" id="ultra-nested-modal-body-content"></div></div></div></div>

<div class="modal fade" id="supplierFormModal" tabindex="-1" aria-hidden="true"><div class="modal-dialog"><div class="modal-content"><div class="modal-header"><h5 class="modal-title" id="supplierFormModalLabel"></h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body" id="supplier-modal-body-content"></div></div></div></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- INICIALIZACIÓN DE MODALES ---
        const mainModalEl = document.getElementById('formModal');
        const formModal = new bootstrap.Modal(mainModalEl);
        const modalBody = document.getElementById('modal-body-content');
        const modalTitle = document.getElementById('formModalLabel');
        
        const nestedModalEl = document.getElementById('nestedFormModal');
        const nestedFormModal = new bootstrap.Modal(nestedModalEl);
        const nestedModalBody = document.getElementById('nested-modal-body-content');
        const nestedModalTitle = document.getElementById('nestedFormModalLabel');

        const superNestedModalEl = document.getElementById('superNestedFormModal');
        const superNestedFormModal = new bootstrap.Modal(superNestedModalEl);
        const superNestedModalBody = document.getElementById('super-nested-modal-body-content');
        const superNestedModalTitle = document.getElementById('superNestedFormModalLabel');
        
        const supplierModalEl = document.getElementById('supplierFormModal');
        const supplierFormModal = new bootstrap.Modal(supplierModalEl);
        const supplierModalBody = document.getElementById('supplier-modal-body-content');
        const supplierModalTitle = document.getElementById('supplierFormModalLabel');
        
        const ultraNestedModalEl = document.getElementById('ultraNestedFormModal');
        const ultraNestedFormModal = new bootstrap.Modal(ultraNestedModalEl);
        const ultraNestedModalBody = document.getElementById('ultra-nested-modal-body-content');
        const ultraNestedModalTitle = document.getElementById('ultraNestedFormModalLabel');

        // --- LÓGICA PARA ATENUAR MODALES ---
        nestedModalEl.addEventListener('show.bs.modal', () => mainModalEl.classList.add('modal-underlay'));
        nestedModalEl.addEventListener('hidden.bs.modal', () => mainModalEl.classList.remove('modal-underlay'));
        superNestedModalEl.addEventListener('show.bs.modal', () => nestedModalEl.classList.add('modal-underlay'));
        superNestedModalEl.addEventListener('hidden.bs.modal', () => nestedModalEl.classList.remove('modal-underlay'));
        supplierModalEl.addEventListener('show.bs.modal', () => mainModalEl.classList.add('modal-underlay'));
        supplierModalEl.addEventListener('hidden.bs.modal', () => mainModalEl.classList.remove('modal-underlay'));
        ultraNestedModalEl.addEventListener('show.bs.modal', () => superNestedModalEl.classList.add('modal-underlay'));
        ultraNestedModalEl.addEventListener('hidden.bs.modal', () => superNestedModalEl.classList.remove('modal-underlay'));


        function initializeSelect2(selector) {
            $(selector).select2({ dropdownParent: $(selector).closest('.modal') });
        }
        const checkbox0km = document.getElementById('vehiculo-0km');

        
        // --- MANEJO DE APERTURA DE MODALES ---
        function openMainModal(url, title) {
             modalTitle.textContent = title;
             fetch(url)
                .then(r => r.text()).then(html => {
                    modalBody.innerHTML = html;
                    
                    initializeSelect2('#formModal .form-select');
                    initializeImageCollection();
                    initializeCheckbox0km();
                    formModal.show();
                    attachFormSubmitListener();
                });
        }

        const newVehicleButton = document.getElementById('btn-nuevo-vehiculo');
        if (newVehicleButton) {
            newVehicleButton.addEventListener('click', () => openMainModal('{{ path('app_vehiculos_new') }}', 'Nuevo Vehículo'));
        }
        
        $('#tabla-vehiculos tbody').on('click', '.btn-editar', function() {
            const row = $(this).closest('tr');
            const vehiculoId = row.data('id');
            const url = `{{ path('app_vehiculos_edit', {'id': 'ID_PLACEHOLDER'}) }}`.replace('ID_PLACEHOLDER', vehiculoId);
            openMainModal(url, `Editar Vehículo #${vehiculoId}`);
        });

        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('action') === 'new') {
            newVehicleButton?.click();
        }
        
        modalBody.addEventListener('click', function(e) {
            
            if (e.target.closest('#btn-add-nested-version')) {
                nestedModalTitle.textContent = 'Nueva Versión';
                fetch('{{ path('app_versiones_new') }}').then(r => r.text()).then(html => {
                    nestedModalBody.innerHTML = html;
                    initializeSelect2('#nestedFormModal .form-select');
                    nestedFormModal.show();
                    attachNestedFormSubmitListener();
                });
            }
            if (e.target.closest('#btn-add-nested-proveedor')) {
                supplierModalTitle.textContent = 'Nuevo Proveedor';
                fetch('{{ path('app_proveedores_new') }}').then(r => r.text()).then(html => {
                    supplierModalBody.innerHTML = html;
                    supplierFormModal.show();
                    attachSupplierFormSubmitListener();
                });
            }
        });
        
        nestedModalBody.addEventListener('click', function(e) {
            if (e.target.closest('#btn-add-nested-modelo')) {
                superNestedModalTitle.textContent = 'Nuevo Modelo';
                fetch('{{ path('app_modelos_new') }}').then(r => r.text()).then(html => {
                    superNestedModalBody.innerHTML = html;
                    initializeSelect2('#superNestedFormModal .form-select');
                    superNestedFormModal.show();
                    attachSuperNestedFormSubmitListener();
                });
            }
        });

        superNestedModalBody.addEventListener('click', function(e) {
            if (e.target.closest('#btn-add-nested-marca')) {
                ultraNestedModalTitle.textContent = 'Nueva Marca';
                fetch('{{ path('app_marca_new') }}').then(r => r.text()).then(html => {
                    ultraNestedModalBody.innerHTML = html;
                    ultraNestedFormModal.show();
                    attachUltraNestedFormSubmitListener();
                });
            }
        });

        // --- MANEJO DE COLECCIÓN DE IMÁGENES ---
        function initializeImageCollection() {
            const addBtn = document.getElementById('btn-add-imagen');
            const collectionHolder = document.getElementById('imagenes-collection');
            if (!addBtn || !collectionHolder) return;
            const addRemoveButton = (item) => {
                const removeButton = document.createElement('button');
                removeButton.type = 'button';
                removeButton.className = 'btn btn-danger btn-sm btn-remove-imagen';
                removeButton.innerHTML = '<i class="fa fa-trash"></i>';
                const formGroup = item.querySelector('.form-group');
                if (formGroup) {
                    formGroup.classList.add('input-group');
                    formGroup.appendChild(removeButton);
                }
            };
            collectionHolder.querySelectorAll('li').forEach(row => addRemoveButton(row));
            addBtn.addEventListener('click', function() {
                let index = collectionHolder.dataset.index;
                const newForm = collectionHolder.dataset.prototype.replace(/__name__/g, index);
                collectionHolder.dataset.index = ++index;
                const newFormLi = document.createElement('li');
                newFormLi.classList.add('mb-2');
                newFormLi.innerHTML = newForm;
                collectionHolder.appendChild(newFormLi);
                addRemoveButton(newFormLi);
            });
            collectionHolder.addEventListener('click', function(e) {
                if (e.target.closest('.btn-remove-imagen')) {
                    e.target.closest('li').remove();
                }
            });
        }
        
        // --- LÓGICA GENÉRICA DE SUBMIT DE FORMULARIO ---
        function handleFormSubmit(form, onSuccess, modalToHide) {
            if (!form) return;
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const btn = form.querySelector('button[type="submit"]');
                const spinner = btn.querySelector('.spinner-border');
                spinner.classList.remove('d-none');
                btn.disabled = true;
                form.querySelectorAll('.form-error-message').forEach(el => el.innerHTML = '');

                fetch(form.action, { method: 'POST', body: new FormData(form), headers: {'X-Requested-With': 'XMLHttpRequest'} })
                .then(response => { if (!response.ok) { return response.json().then(err => Promise.reject(err)); } return response.json(); })
                .then(data => {
                    if (data.status === 'success') {
                        $.notify({icon: 'fas fa-check-circle', title: '¡Éxito!', message: data.message},{type: 'success'});
                        onSuccess(data);
                        if (modalToHide) {
                            modalToHide.hide();
                        }
                    } else {
                        if(data.errors) {
                            Object.keys(data.errors).forEach(fieldName => {
                                const container = form.querySelector(`[data-field-error="${fieldName}"]`);
                                if (container) { container.innerHTML = `<p class="mb-0">${data.errors[fieldName].join(', ')}</p>`; }
                            });
                            $.notify({icon: 'fas fa-exclamation-triangle', title: 'Error de Validación', message: 'Por favor, corrija los errores.'},{type: 'danger'});
                        } else {
                            $.notify({icon: 'fas fa-exclamation-triangle', title: 'Error', message: data.message || 'Ocurrió un error.'},{type: 'danger'});
                        }
                    }
                })
                .catch(errorData => {
                    $.notify({icon: 'fas fa-exclamation-triangle', title: 'Error', message: 'Ocurrió un error inesperado.'},{type: 'danger'});
                })
                .finally(() => { spinner.classList.add('d-none'); btn.disabled = false; });
            });
        }

        // --- ASIGNACIÓN DE LISTENERS A CADA FORMULARIO ---
        function attachFormSubmitListener() {
            handleFormSubmit(document.getElementById('formVehiculo'), (data) => {
                window.location.reload();
            }, formModal);
        }
        
        function attachNestedFormSubmitListener() {
            handleFormSubmit(document.getElementById('formVersion'), (data) => {
                const v = data.version;
                const newOption = new Option(v.displayText, v.id, true, true);
                $('#formVehiculo select[name="vehiculos[version]"]').append(newOption).trigger('change');
            }, nestedFormModal);
        }
        
        function attachSuperNestedFormSubmitListener() {
            handleFormSubmit(document.getElementById('formModelo'), (data) => {
                const newModel = data.modelo;
                const newOption = new Option(newModel.displayText, newModel.id, true, true);
                $('#nestedFormModal select[name="versiones[modelo]"]').append(newOption).trigger('change');
            }, superNestedFormModal);
        }
        
        function attachSupplierFormSubmitListener() {
            handleFormSubmit(document.getElementById('formProveedor'), (data) => {
                const newSupplier = data.proveedor;
                const newOption = new Option(newSupplier.displayText, newSupplier.id, true, true);
                $('#formVehiculo select[name="vehiculos[supplier]"]').append(newOption).trigger('change');
            }, supplierFormModal);
        }

        function attachUltraNestedFormSubmitListener() {
            handleFormSubmit(document.getElementById('formMarca'), (data) => {
                const newBrand = data.marca;
                const newOption = new Option(newBrand.displayText, newBrand.id, true, true);
                $('#superNestedFormModal select[name="modelos[marca]"]').append(newOption).trigger('change');
            }, ultraNestedFormModal);
        }
        
        // --- INICIALIZACIÓN DE DATATABLES ---
        $('#tabla-vehiculos').DataTable({
            "pageLength": 10,
            "language": { "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json", "emptyTable": "No se encontraron vehículos" },
            "order": [[ 0, "desc" ]]
        });
    });

    function initializeCheckbox0km() {
        const checkbox0km = document.getElementById('vehiculo-0km');
        const plateInput = document.getElementById('vehiculos_plateNumber'); // Ajusta si el id es distinto

        if (!checkbox0km || !plateInput) return;

        // Estado inicial
        plateInput.disabled = checkbox0km.checked;
        if (checkbox0km.checked) {
            plateInput.removeAttribute('required');
        }

        checkbox0km.addEventListener('change', function () {
            if (this.checked) {
                plateInput.value = '';
                plateInput.removeAttribute('required');
                plateInput.disabled = true;
            } else {
                plateInput.setAttribute('required', 'required');
                plateInput.disabled = false;
            }
        });
    }
    </script>
{% endblock %}