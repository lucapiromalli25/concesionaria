{% extends 'base.html.twig' %}

{% block title %}Gestión de Versiones{% endblock %}

{% block body %}
<div class="page-header"><h3 class="fw-bold mb-3">Gestión de Versiones</h3></div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Listado de Versiones</h4>
                    <button id="btn-nueva-version" class="btn btn-primary btn-round ms-auto">
                        <i class="fa fa-plus"></i> Agregar Versión
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="tabla-versiones">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre Versión</th>
                                <th>Modelo</th>
                                <th>Marca</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for version in versiones %}
                            <tr data-id="{{ version.id }}">
                                <td>{{ version.id }}</td>
                                <td class="version-name">{{ version.name }}</td>
                                <td class="modelo-name">{{ version.modelo.name }}</td>
                                <td class="marca-name">{{ version.modelo.marca.name }}</td>
                                <td class="text-end">
                                    <button class="btn btn-warning btn-sm btn-editar">Editar</button>
                                </td>
                            </tr>
                        {% else %}
                            <tr id="fila-sin-versiones"><td colspan="5" class="text-center">No se encontraron versiones</td></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="formModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="formModalLabel">Nueva Versión</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-body-content"></div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const formModal = new bootstrap.Modal(document.getElementById('formModal'));
        const modalBody = document.getElementById('modal-body-content');
        const modalTitle = document.getElementById('formModalLabel');
        const tablaBody = document.querySelector('#tabla-versiones tbody');

        function initializeSelect2() {
            $('#formModal .form-select').select2({
                dropdownParent: $('#formModal')
            });
        }

        document.getElementById('btn-nueva-version').addEventListener('click', function() {
            modalTitle.textContent = 'Nueva Versión';
            fetch('{{ path('app_versiones_new') }}')
                .then(response => response.text()).then(html => {
                    modalBody.innerHTML = html;
                    initializeSelect2();
                    formModal.show();
                    attachFormSubmitListener();
                });
        });

        tablaBody.addEventListener('click', function(e) {
            if (e.target && e.target.classList.contains('btn-editar')) {
                const row = e.target.closest('tr');
                const versionId = row.dataset.id;
                modalTitle.textContent = `Editar Versión #${versionId}`;
                const url = `{{ path('app_versiones_edit', {'id': 'ID_PLACEHOLDER'}) }}`.replace('ID_PLACEHOLDER', versionId);

                fetch(url).then(response => response.text()).then(html => {
                    modalBody.innerHTML = html;
                    initializeSelect2();
                    formModal.show();
                    attachFormSubmitListener();
                });
            }
        });

        function attachFormSubmitListener() {
            const form = document.getElementById('formVersion');
            if (!form) return;
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const submitButton = form.querySelector('button[type="submit"]');
                const spinner = submitButton.querySelector('.spinner-border');
                spinner.classList.remove('d-none');
                submitButton.disabled = true;

                // Limpiamos errores previos antes de enviar
                form.querySelectorAll('.form-error-message').forEach(el => el.innerHTML = '');

                fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form),
                    headers: {'X-Requested-With': 'XMLHttpRequest'}
                })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(err => Promise.reject(err));
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.status === 'success') {
                        $.notify({icon: 'fas fa-check-circle', title: '¡Éxito!', message: data.message},{type: 'success'});
                        const esEdicion = form.action.includes('/edit');
                        if (esEdicion) {
                            const rowToUpdate = tablaBody.querySelector(`tr[data-id="${data.version.id}"]`);
                            if (rowToUpdate) {
                                rowToUpdate.querySelector('.version-name').textContent = data.version.name;
                                rowToUpdate.querySelector('.modelo-name').textContent = data.version.modelo.name;
                                rowToUpdate.querySelector('.marca-name').textContent = data.version.modelo.marca.name;
                            }
                        } else {
                            document.getElementById('fila-sin-versiones')?.remove();
                            const newRow = `
                                <tr data-id="${data.version.id}">
                                    <td>${data.version.id}</td>
                                    <td class="version-name">${data.version.name}</td>
                                    <td class="modelo-name">${data.version.modelo.name}</td>
                                    <td class="marca-name">${data.version.modelo.marca.name}</td>
                                    <td class="text-end"><button class="btn btn-warning btn-sm btn-editar">Editar</button></td>
                                </tr>`;
                            tablaBody.insertAdjacentHTML('beforeend', newRow);
                        }
                        formModal.hide();
                    }
                })
                .catch(errorData => {
                    // LÓGICA DE MANEJO DE ERRORES COMPLETADA
                    if (errorData.errors) {
                        Object.keys(errorData.errors).forEach(fieldName => {
                            const errorContainer = form.querySelector(`[data-field-error="${fieldName}"]`);
                            if (errorContainer) {
                                const errorMessage = errorData.errors[fieldName].join(', ');
                                errorContainer.innerHTML = `<p class="mb-0">${errorMessage}</p>`;
                            }
                        });
                        $.notify({
                            icon: 'fas fa-exclamation-triangle',
                            title: 'Error de Validación',
                            message: errorData.message || 'Por favor, corrija los errores.',
                        },{ type: 'danger' });
                    } else {
                        // Error genérico
                        $.notify({
                            icon: 'fas fa-exclamation-triangle',
                            title: 'Error',
                            message: errorData.message || 'Ocurrió un error inesperado.',
                        },{ type: 'danger' });
                    }
                })
                .finally(() => {
                    // LÓGICA FINAL COMPLETADA
                    spinner.classList.add('d-none');
                    submitButton.disabled = false;
                });
            });
        }
    });
    </script>
{% endblock %}