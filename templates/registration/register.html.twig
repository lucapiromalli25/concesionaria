<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro - Concesionaria</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/kaiadmin.min.css') }}">
    <style>
        body { background-color: #f4f4f9; display: flex; align-items: center; justify-content: center; min-height: 100vh; padding: 2rem 0; }
        .register-card { max-width: 450px; width: 100%; }
    </style>
</head>
<body>
    <div class="card register-card shadow-lg">
        <div class="card-header text-center">
            <h3 class="fw-bold mb-0">Crear Cuenta</h3>
        </div>
        <div class="card-body">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.complete_name, {
                    label: 'Nombre Completo',
                    attr: {'class': 'form-control'}
                }) }}
                {{ form_row(registrationForm.email, {
                    label: 'Email',
                    attr: {'class': 'form-control'}
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Contraseña',
                    attr: {'class': 'form-control'}
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Acepto los términos y condiciones'
                }) }}

                <button type="submit" class="btn btn-primary w-100 fw-bold mt-3">Registrarme</button>
                 <hr>
                <p class="text-center">¿Ya tienes cuenta? <a href="{{ path('app_login') }}">Inicia Sesión</a></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</body>
</html>