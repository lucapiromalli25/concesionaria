{% set form_action = form.vars.value.id ? path('app_clientes_edit', {'id': form.vars.value.id}) : path('app_clientes_new') %}
{{ form_start(form, {'action': form_action, 'attr': {'id': 'formCliente'}}) }}
    <div class="row">
        <div class="col-sm-6">{{ form_row(form.first_name) }}</div>
        <div class="col-sm-6">{{ form_row(form.last_name) }}</div>
    </div>
    {{ form_row(form.document_number) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.address) }}
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">
            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span> Guardar
        </button>
    </div>
{{ form_end(form) }}