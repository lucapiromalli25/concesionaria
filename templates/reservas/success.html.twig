{% extends 'base.html.twig' %}

{% block title %}Reserva Registrada{% endblock %}

{% block body %}
<div class="page-inner">
    <div class="d-flex align-items-center justify-content-center" style="min-height: 60vh;">
        <div class="text-center">
            <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
            <h3 class="fw-bold">¡Reserva registrada con éxito!</h3>
            <p class="text-muted">Descargando comprobante...</p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Disparar la descarga del comprobante
            window.location.href = '{{ path('app_reservas_receipt', {'id': reserva.id}) }}';

            // Después de 2 segundos, redirigir al listado de vehículos
            setTimeout(function() {
                window.location.href = '{{ path('app_vehiculos_index') }}';
            }, 2000);
        });
    </script>
{% endblock %}